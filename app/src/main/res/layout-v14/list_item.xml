<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:text="@string/desc1"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/desc"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStrPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="25dp"
            android:layout_weight="2"
            android:gravity="right"
            android:text="@string/cena"
            android:textColor="@color/colorAccent"
            android:textColorLink="@color/colorAccent"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="25dp"
        android:layout_weight="3.30"
        android:text="@string/cena2"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="2.16">

        <Button
            android:id="@+id/more"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginRight="25dp"
            android:layout_weight="0.51"
            android:background="@drawable/mybutton"
            android:text="Zobacz ofertÄ™"
            android:textSize="16dp" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/tvLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/localizacja"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>
